#设置邮件服务器主机名  smtp.qq.com为SMTP服务器地址 端口为：25
mail.smtp.host = smtp.qq.com



#开启debug模式
mail.debug = true



#发送服务器需要身份验证
mail.smtp.auth = true



#发送邮件协议名称
mail.transport.protocol = smtp



#设置邮件发送服务器端口
mail.smtp.port = mail.smtp.port
#设置端口号为465
mail.smtp.port.Dc=465



#设置ssl端口
mail.smtp.socketFactory.port=mail.smtp.socketFactory.port
mail.smtp.socketFactory.port.Dc = 465



#设置连接超时
mail.smtp.timeout = mail.smtp.timeout
mail.smtp.timeout.Dc = 1000



















